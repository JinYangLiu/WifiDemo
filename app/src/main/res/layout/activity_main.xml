<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_wifi_is_open"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="检查WIFI是否开启" />

        <Button
            android:id="@+id/btn_wifi_open"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="打开WIFI" />

        <Button
            android:id="@+id/btn_wifi_close"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="关闭WIFI" />

        <Button
            android:id="@+id/btn_wifi_is_connect"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="判断是否连接了Wifi" />

        <Button
            android:id="@+id/btn_wifi_info"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="获取当前手机所连接的wifi信息" />
        <Button
            android:id="@+id/btn_wifi_scan"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="搜索附近的热点信息" />
        <Button
            android:id="@+id/btn_wifi_connect"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="连接wifi" />
        <Button
            android:id="@+id/btn_wifi_ap"
            style="@style/btn_style"
            android:onClick="onBtnClick"
            android:text="开启wifi热点" />
    </LinearLayout>
</ScrollView>